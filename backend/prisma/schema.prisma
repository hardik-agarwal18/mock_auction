generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  username  String   @unique
  createdAt DateTime @default(now())

  teams Team[]
}

model AuctionRoom {
  id         String     @id @default(uuid())
  name       String
  hostId     String
  status     RoomStatus @default(WAITING)
  purse      Int
  squadLimit Int
  createdAt  DateTime   @default(now())

  teams   Team[]
  players RoomPlayer[]
}

model Team {
  id     String @id @default(uuid())
  roomId String
  userId String
  name   String
  budget Int

  room    AuctionRoom  @relation(fields: [roomId], references: [id])
  user    User         @relation(fields: [userId], references: [id])
  players TeamPlayer[]
}

model RoomPlayer {
  id           String       @id @default(uuid())
  roomId       String
  name         String
  role         String
  basePrice    Int
  status       PlayerStatus @default(UPCOMING)
  soldPrice    Int?
  soldToTeamId String?

  room        AuctionRoom  @relation(fields: [roomId], references: [id])
  teamPlayers TeamPlayer[]

  createdAt DateTime @default(now())

  @@index([roomId])
}

model TeamPlayer {
  id       String @id @default(uuid())
  teamId   String
  playerId String
  price    Int

  team   Team       @relation(fields: [teamId], references: [id])
  player RoomPlayer @relation(fields: [playerId], references: [id])
}

enum RoomStatus {
  WAITING
  LIVE
  COMPLETED
}

enum PlayerStatus {
  UPCOMING
  ACTIVE
  SOLD
  UNSOLD
}
